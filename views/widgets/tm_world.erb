<script src="/js/widgets/tm_world.js" type="text/javascript"></script>

<div id="form_world">
    <p><label for="world">🌎 World:</label></p>

    <% if form.failed_on?(:tm_world, :present) %>
        <p class="flash error">⚠️ Please select a world</p>
    <% end %>

    <p class="selector">
        <input type="radio" name="tm_world" value="Default" id="world_radio_manual" checked>
        <label for="world_radio_manual">Manual (Default)</label>

        <input type="radio" name="tm_world" value="MOD WORLD" id="world_radio_mendel">
        <label for="world_radio_mendel">Mendel Engine (MOD WORLD)</label>

        <input type="radio" name="tm_world" value="custom" id="world_radio_custom">
        <label for="world_radio_custom">Custom</label>
    </p>

    <p id="world_input_custom">
        <input name="tm_world_custom" maxlength="100" size="50" type="text" placeholder="Custom world name">
    </p>

    <p id="world_input_mendel" class="selector">
        <input type="radio" name="tm_world_custom_type" value="manual" id="world_radio_c_d" checked>
        <label for="world_radio_c_d">Manual</label>

        <input type="radio" name="tm_world_custom_type" value="mendel" id="world_radio_c_m">
        <label for="world_radio_c_m">Mendel</label>
    </p>
</div>
