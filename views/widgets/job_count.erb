<script src="/js/widgets/job_count.js" type="text/javascript"></script>

<div id="job_count_form">
    <p><label for="count">🎚 Job count:</label></p>

    <% if form.failed_on?(:job_count, :present) %>
        <p class="flash error">⚠️ Jobs count is a required field</p>
    <% end %>
    <% if form.failed_on?(:job_count, :uint) %>
        <p class="flash error">⚠️ Jobs count must be a non-negative number</p>
    <% end %>

    <p>
        <input name="count" type="text" placeholder="Number of jobs" maxlength="5" size="50">
    </p>
</div>
