<script src="/js/widgets/survey_type.js" type="text/javascript"></script>

<div id="survey_type_form">
    <p><label for="survey_type">📈 Survey:</label></p>

    <% if form.failed_on?(:survey_type, :present) %>
        <p class="error">⚠️ No survey type provided</p>
    <% end %>

    <p><select id="survey_type_select" name="survey_type">
        <option value="CCS">Census - CCS</option>
        <option value="HH">Census - HH</option>
        <option value="OHS">Census - OHS</option>
        <option value="CE">Census - CE</option>
        <option value="GFF" selected>Social Survey - GFF</option>
        <option value="LFS">Social Survey - LFS</option>
        <option value="Custom">Custom</option>
    </select></p>

    <p id="survey_type_input_custom">
        <input name="custom_survey_type" maxlength="100" size="50" type="text" placeholder="Custom survey type">
    </p>
</div>
