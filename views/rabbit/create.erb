<form action="/" method="post">
    <fieldset>
        <legend>Queue Details</legend>

        <p><label for="server">☁️ Queue URL:</label></p>
        <p><input id="url" name="server" maxlength="200" size="90" type="text" placeholder="URL"></p>

        <p><label for="user_name">🔑 Credentials:</label></p>
        <% if form.failed_on?(:user_name) || form.failed_on?(:password) %>
            <p class="error">⚠️ Credentials are required</p>
        <% end %>
        <p><input id="user_name" name="user_name" maxlength="100" size="25" type="text" placeholder="Username"> <input name="password" maxlength="100" size="25" type="password" placeholder="Password"></p>
    </fieldset>
    <fieldset>
        <legend>Job Details</legend>

        <p><label for="survey">📈 Survey:</label></p>
        <p><select id="survey" name="survey">
            <option value="CCS">Census - CCS</option>
            <option value="HH">Census - HH</option>
            <option value="GFF" selected>Social Survey - GFF</option>
            <option value="LFS">Social Survey - LFS</option>
        </select></p>

        <p><label for="world">🌎 World:</label></p>
        <p>
            <input type="radio" id="world" name="world" value="Default" checked> Manual (Default)
            <input type="radio" name="world" value="MOD WORLD"> Mendel Engine
        </p>

        <p><label for="user_names">👥 Totalmobile users (comma separated, leave blank for auto-allocation):</label></p>
        <% if form.failed_on?(:user_names) %>
            <p class="error">⚠️ Totalmobile users is a required field</p>
        <% end %>
        <p><input id="user_names" name="user_names" maxlength="100" size="50" type="text" placeholder="Totalmobile users"></p>

        <p><label for="user_names">👥 Job Identity:</label></p>
        <p><input id="user_names" name="user_names" maxlength="100" size="50" type="text" placeholder="Totalmobile users"></p>

        <p><label for="user_names">👥 Survey Type:</label></p>
        <p><input id="user_names" name="user_names" maxlength="100" size="50" type="text" placeholder="Totalmobile users"></p>

        <p><label for="user_names">👥 Preallocated Status:</label></p>
        <p><input id="user_names" name="user_names" maxlength="100" size="50" type="text" placeholder="Totalmobile users"></p>

        <p><label for="user_names">👥 Authentication Number:</label></p>
        <p><input id="user_names" name="user_names" maxlength="100" size="50" type="text" placeholder="Totalmobile users"></p>

        <p><label for="user_names">👥 Due Date:</label></p>
        <p><input id="user_names" name="user_names" maxlength="100" size="50" type="text" placeholder="Totalmobile users"></p>

        <p><label for="user_names">👥 Address:</label></p>
        <p><input id="user_names" name="user_names" maxlength="100" size="50" type="text" placeholder="Totalmobile users"></p>

        <p><label for="user_names">👥 Additional Properties:</label></p>
        <p><input id="user_names" name="user_names" maxlength="100" size="50" type="text" placeholder="Totalmobile users"></p>

        <p><label for="skills">📚 Skills (comma separated, defaults to Survey if blank)</label></p>
        <p><input id="skills" name="skills" maxlength="100" size="50" type="text" placeholder="Skills"></p>

        <p><label for="job_count">🎚 Jobs per user:</label></p>
        <% if form.failed_on?(:job_count, :present) %>
            <p class="error">⚠️ Jobs per user is a required field</p>
        <% end %>
        <% if form.failed_on?(:job_count, :int) %>
            <p class="error">⚠️ Jobs per user must be 1-100</p>
        <% end %>
        <p>
            <input id="job_count" name="job_count" maxlength="3" size="5" type="text" placeholder="1-100">
        </p>

        <p><label for="location">🇬🇧 Location:</label></p>
        <p>
            <select id="location" name="location">
                <option value="north">North</option>
                <option value="east">East</option>
                <option value="south">South</option>
                <option value="west">West</option>
            </select>
            <input type="submit" value="Send jobs">
        </p>
    </fieldset>
</form>
